{
    "tasks": [
        {
            "label": "CompileSingle_C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}